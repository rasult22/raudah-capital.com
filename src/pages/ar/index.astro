---
import "@fontsource-variable/inter";
import "@fontsource-variable/raleway"

import About from "~/components/about.astro";
import Provide from "~/components/provide.astro";
import Focus from '~/components/focus.astro'
import Footer from "~/components/footer.astro";
import Header from "~/components/header.astro";
import Intro from "~/components/intro.astro";
import HowTo from "~/components/how-to.astro";
import Invest from "~/components/invest.astro";
import Access from "~/components/access.astro";
import FormF from "~/components/form.astro";
import Contacts from "~/components/contacts.astro";
import "~/styles/index.css";

const { generator, site } = Astro;


const image = new URL("/optimized/social.webp", site);
---

<!doctype html>
<html lang="en" class="h-full motion-safe:scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.ico" type="image/svg+xml" />
    <meta name="generator" content={generator} />

    <title>صندوق رأس المال الاستثماري WAQF</title>
    <meta name="description" content="مرحلة جديدة في دعم الشركات الناشئة القيمة" />

    <!-- social media -->
    <meta property="og:title" content="صندوق رأس المال الاستثماري WAQF" />
    <meta property="og:type" content="website" />
    <meta property="og:description" content="مرحلة جديدة في دعم الشركات الناشئة القيمة" />
    <meta property="og:image" content={image} />
    <meta property="og:url" content={site} />
    <meta name="twitter:card" content="summary_large_image" />
  </head>
  <body
    class="h-full overflow-x-hidden text-base text-right"
  >
    <Header lang={'ar'} />
    <Intro lang={'ar'}/>
    <Provide lang={'ar'}/>
    <About lang={'ar'}/>
    <Invest lang={'ar'}/>
    <Access lang={'ar'}/>
    <Focus lang={'ar'}/>
    <HowTo lang={'ar'}/>
    <FormF lang={'ar'}/>
    <Footer lang={'ar'}/>
  </body>
</html>
